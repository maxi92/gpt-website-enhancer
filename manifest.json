{
  "manifest_version": 3,
  "name": "AI Chat Enhancer",
  "version": "1.0",
  "description": "为AI聊天网站提供Markdown转换和导航功能",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://www.tongyi.com/*",
    "https://gemini.google.com/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["siyuan-config.html", "siyuan-config.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "siyuan-config.html",
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://www.tongyi.com/*",
        "https://gemini.google.com/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
